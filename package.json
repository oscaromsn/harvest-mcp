{
  "name": "harvest-mcp",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun run lint && bun run format && bun build src/server.ts --outdir dist --target node",
    "start": "bun run src/server.ts",
    "clean": "rm -rf node_modules/",
    "typecheck": "tsc --noEmit --strict --exactOptionalPropertyTypes --pretty",
    "typecheck:strict": "tsc --noEmit --strict --exactOptionalPropertyTypes --pretty",
    "check": "biome check --write",
    "check:fix": "biome check --write",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "validate:quick": "bun run typecheck && bun run check && bun test",
    "validate:mcp": "bun scripts/validate-mcp.js",
    "ci": "bun run validate:quick && bun run validate:mcp",
    "test": "vitest --workspace=vitest.workspace.ts",
    "test:watch": "vitest --workspace=vitest.workspace.ts --watch",
    "test:unit": "vitest --workspace=vitest.workspace.ts --project=unit",
    "test:integration": "vitest --workspace=vitest.workspace.ts --project=integration",
    "test:e2e": "vitest --workspace=vitest.workspace.ts --project=e2e",
    "test:coverage": "vitest --workspace=vitest.workspace.ts --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/har-format": "^1.2.16",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.3",
    "pino-pretty": "^13.0.0",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.4",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "openai": "^5.5.0",
    "pino": "^9.6.0",
    "playwright": "^1.52.0",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  }
}
