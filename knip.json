{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/server.ts"
  ],
  "project": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts"
  ],
  "ignore": [
    "coverage/**",
    "dist/**",
    "html/**",
    "manual-session-artifacts/**",
    "node_modules/**",
    "docs/**",
    "issues/**",
    "tests/manual/**"
  ],
  "ignoreDependencies": [
    "sharp",
    "pino-pretty"
  ],
  "ignoreBinaries": [
    "tsc"
  ],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "binaries": "warn",
    "dependencies": "error",
    "devDependencies": "warn",
    "duplicates": "error",
    "enumMembers": "warn",
    "exports": "warn",
    "files": "warn",
    "nsExports": "warn",
    "classMembers": "warn",
    "types": "warn",
    "nsTypes": "warn",
    "unlisted": "warn",
    "unresolved": "warn"
  },
  "vitest": {
    "config": "vitest.config.ts"
  }
}
